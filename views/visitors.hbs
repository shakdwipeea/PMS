<html>
<head>
    <title>PMS</title>
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css">
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">  <div class="navbar-header"> <div> <ul class="nav navbar-nav">
    <li ><a href="/home">Home</a></li>
    <li><a href="/crime">Add A crime</a></li>
    <li><a href="/items">Add Items</a></li>
    <li><a href="/officers">Add Officers</a></li>
    <li><a href="/block">Block Supervision</a></li>
    <li><a href="/prescription">Add Prescription</a></li>
    <li class="active"><a href="/visitors">Visitors</a></li>
    <li><a href="/prisoners">Add Prisoners</a></li>
</ul>
</div></div>
</nav>
<div class="container">

    <div>
        <table class="table table-hover">
            <th>Visitor Name</th>
            <th>Date Of Visit</th>
            <th>Duration Of Visit</th>
            <th>Prisoner's Name</th>
            {{#each visitors}}
                <tr>
                    <td>{{visitor_name}}</td>
                    <td>{{date_of_visit}}</td>
                    <td>{{duration}}</td>
                    <td>{{prisoner_name}}</td>
                </tr>
            {{/each}}
        </table>
    </div>

    <form action="/visitors" method="post">
        <div class="form-group">
            <label for="name">Name of visitor</label>
            <input type="text" class="form-control" placeholder="Name of visitor" id="name" name="name"/>
        </div>

        <div class="form-group">
            <label for="date_of_visit">Date of visit</label>
            <input type="date" class="form-control" placeholder="Date of visit" id="date_of_visit" name="date_of_visit"/>
        </div>

        <div class="form-group">
            <label for="duration">Duration of visit</label>
            <input type="text" class="form-control" placeholder="Duration of visit" id="duration" name="duration"/>
        </div>

        <div class="form-group">
            <label for="prisoner">Select Prisoner</label>
            <select name="prisoner_id" id="prisoner" class="form-control">
                <option disabled >No prisoner</option>
                {{#each prisoners}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>

        <button class="btn btn-default">Submit</button>
    </form>
</div>
</body>
</html>